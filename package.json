{
  "name": "root",
  "author": "Isabelo Nicolas",
  "version": "0.0.1",
  "license": "ISC",
  "private": true,
  "packageManager": "^yarn@1.22.0",
  "engines": {
    "node": "^18.12.0",
    "yarn": "^1.22.0",
    "npm": "please-use-yarn"
  },
  "workspaces": [
    "packages/*",
    "www/*"
  ],
  "scripts": {
    "clean": "lerna clean && lerna exec -- yarn cache clean",
    "setup": "yarn clean && yarn install --force && lerna exec -- yarn build",
    "packages:publish": "lerna publish --no-private",
    "packages:dev": "yarn packages:transpile",
    "packages:build": "lerna exec --scope=@cfui/* -- yarn build",
    "packages:link": "lerna exec --scope=@cfui/* -- yarn link",
    "packages:unlink": "lerna exec --scope=@cfui/* -- yarn unlink",
    "packages:transpile": "lerna exec --scope=@cfui/* -- yarn watch",
    "app:start": "cd www/app1 && yarn start",
    "app:build": "cd www/app1 && yarn build"
  },
  "devDependencies": {
    "lerna": "^7.1.4"
  }
}
